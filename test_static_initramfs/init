#!/bin/busybox sh

echo "=== Yat_Casched 测试环境启动成功 ==="
echo "内核版本: $(cat /proc/version)"
echo "调度器信息:"

# 挂载基本文件系统
/bin/busybox mount -t proc proc /proc
/bin/busybox mount -t sysfs sysfs /sys
/bin/busybox mount -t devtmpfs devtmpfs /dev

# 安装 busybox 命令
/bin/busybox --install -s

echo "当前运行的调度器:"
cat /sys/kernel/debug/sched/features 2>/dev/null || echo "调度器调试信息需要 CONFIG_SCHED_DEBUG"

echo ""
echo "=== 进入交互式 shell ==="
echo "使用 'exit' 退出"

# 启动 shell
exec /bin/busybox sh
